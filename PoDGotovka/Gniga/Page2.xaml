<Page x:Class="PoDGotovka.Gniga.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PoDGotovka.Gniga"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="588*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Label Content="Введите а" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
        <Label Content="Введите b" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Grid.Row="1"/>
        <Button Content="Посчитать" Grid.Row="2" Grid.ColumnSpan="2" Click="Button_Click"/>
        <TextBox Name="ABox" Grid.Row="0" Grid.Column="1"/>
        <TextBox Name="BBox" Grid.Row="1" Grid.Column="1"/>
        <Label Name="Pin" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3"/>

    </Grid>
</Page>
